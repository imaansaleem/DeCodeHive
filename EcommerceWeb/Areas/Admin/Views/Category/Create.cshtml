@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <!--So basically when the button is triggered, it will hit the same endpoint with the post request.-->
        <!--Http post method inside controller-->

        <form class="row" method="post">
            <div class="border p-3">

                <!--Tag helper to Show all the Error message on one place with hidden datamember name-->

                <div class="form-floating py-2 col-12">
                    <!--Tag helper to display name of datamember-->
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                   
                    <!--Tag helper to print error for wrong input-->
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <!--these tag helper also know Disply order is integer so it will also allow it to do manually using arrows-->
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <!--col-md-3 tells if screen size is small divide it into 3 columns-->
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <!--textend floats left element-->
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>


<!--javascript client Side Validations-->
@section Scripts{
    @{
        //add file name
        <partial name="_ValidationScriptsPartial"/>
    }
}