@model List<Category>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2"></div>
            <h2 class = "text-primary"> Create Category</h2>
            <hr/>
            <div class="mb-3 row p-1">
                <label class="p-0">Category Name</label>
                <input type="text" class="form-control" />
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">Display Order</label>
                <input type="text" class="form-control" />
            </div>

        <div class="row">
            <!--col-md-3 tells if screen size is small divide it into 3 columns-->
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <!--textend floats left element-->
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>      
    </div>
</form>